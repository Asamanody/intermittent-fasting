<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.el3asas.regym.ui.profile.ProfileFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:np_dividerColor="@color/dividerColor"
            app:np_textColor="@color/dividerColor"
            app:np_selectedTextColor="@color/dividerColor"
            app:np_dividerLength="@dimen/pickerDividerH"
            app:np_max="1"
            app:np_min="0"
            app:np_orientation="vertical"
            app:np_selectedTextSize="@dimen/pickerST"
            app:np_textSize="@dimen/pickerUST" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=" : "
            android:textColor="@color/actv"
            android:textSize="@dimen/_22ssp" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:np_dividerColor="@color/dividerColor"
            app:np_selectedTextColor="@color/dividerColor"
            app:np_textColor="@color/dividerColor"
            app:np_dividerLength="@dimen/pickerDividerH"
            app:np_max="59"
            app:np_min="0"
            app:np_orientation="vertical"
            app:np_selectedTextSize="@dimen/pickerST"
            app:np_textSize="@dimen/pickerUST" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=" : "
            android:textColor="@color/actv"
            android:textSize="@dimen/_22ssp" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:np_dividerColor="@color/dividerColor"
            app:np_selectedTextColor="@color/dividerColor"
            app:np_textColor="@color/dividerColor"
            app:np_dividerLength="@dimen/pickerDividerH"
            app:np_max="12"
            app:np_min="1"
            app:np_orientation="vertical"
            app:np_selectedTextSize="@dimen/pickerST"
            app:np_textSize="@dimen/pickerUST" />
    </LinearLayout>
</layout>